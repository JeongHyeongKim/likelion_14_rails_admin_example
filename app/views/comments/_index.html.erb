<% if @comments.present? %>
<div class="card" style="width: 50rem">
  <div class="card-body">
    <h5 class="card-title">댓글 목록</h5>
    <ul class="list-group list-group-flush">
    <% @comments.each do |comment| %>
      <li class="list-group-item"><%= comment.body %>
        <p class="float-right"> 작성자 : <%= comment.user.name %>
          <% if current_user.present? %>
            <% if can? :destroy, comment %>
              <span class="float-right"> | <%= link_to '삭제', comment, method: :delete, data: {confirm: "댓글 삭제 진짜해요?"} %></span>
            <% end %>
          <% end %>
        </p>
      </li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>